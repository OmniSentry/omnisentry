= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :tag_id
    = f.text_field :tag_id
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
